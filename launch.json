{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js: debug server-side",
      "program": "${workspaceFolder}/node_modules/next/dist/bin/next",
      "args": ["dev"],
      "runtimeArgs": ["--inspect"],
      "protocol": "inspector",
      "autoAttachChildProcesses": true,
      "env": {
        "NODE_OPTIONS": "--inspect"
      }
    }
  ]
}
